echo -n "$(echo -n "(" && for f in /etc/wireguard/servers/:*.conf; do echo -n " " && echo -n "(\"" && cat "$f" | grep Address | cut -d' ' -f3 | tr -d '\n' && echo -n "\" \"" && cat "$f" | grep Endpoint | cut -d' ' -f3 | tr -d '\n' && echo -n "\" \"" && cat "$f" | grep PublicKey | cut -d' ' -f3 | tr -d '\n' && echo -n "\")"; done && echo -n ")")" > /etc/wireguard/servers-list && chmod 600 /etc/wireguard/servers-list && echo -n "$(for f in /etc/wireguard/servers/:*.conf; do cat "$f" | grep PrivateKey | cut -d' ' -f3 | tr -d '\n' && break; done)" > /etc/wireguard/private.key && chmod 000 /etc/wireguard/private.key
